            </ul>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
    var _url_index ="@Url.Content("/Currency/ListCurrency")";

    jQuery(function ($) {
        setInterval(initView, 1000);
    });

    function initView() {
        $.ajax({
            type: "POST",
            url: _url_index,
            data: "",
            success: function (result) {
                KOView.Currency(result.Content);
            }
        });
    }

    function KOViewModel(data) {
        var self = this;
        self.Currency = ko.observableArray(data);
    }
    var KOView=new KOViewModel([]);
    ko.applyBindings(KOView, document.getElementById("view-currency"));

    </script>
}

